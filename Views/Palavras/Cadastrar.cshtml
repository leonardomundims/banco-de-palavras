@{ ViewData["Title"] = "Palavras - "; }

<form>
    <div class="form-group">
        <label for="Palavra">Palavra:</label>
        <input type="text" class="form-control" name="nome" id="nome" aria-describedby="emailHelp">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Nivel</label>
        <select name="nivel" id="nivel">
            @foreach(var nivel in ViewBag.Niveis){
            <option value="nivel.ID">@nivel.Valor</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>