<!-- PALAVRAS -->
@model List<BancoDePalavras.Models.Palavra>

    @{ ViewData["Title"] = "Palavras - "; } @if (TempData["Mensagem"] != null) {
    <div class="alert alert-success" role="alert">
        @TempData["Mensagem"]
    </div>
    }
    <a class="btn btn-outline btn-dark" asp-action="cadastrar" asp-controller="palavras">Cadastrar</a>
    <table class="table table-striped mt-1 text-center">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Palavra</th>
                <th scope="col">Nivel</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Exemplo</td>
                <td>1</td>
                <td>
                    <a href="">Editar</a> | <a href="">Excluir</a>
                </td>
            </tr>
            @foreach(var palavra in Model){
            <tr>
                <td>@palavra.Nome</td>
                <td>@palavra.Nivel</td>
                <td>
                    <a href="palavras/atualizar/@palavra.Id">Editar</a> |
                    <a href="palavras/excluir/@palavra.Id">Excluir</a>
                </td>
            </tr>
            }
        </tbody>
    </table>